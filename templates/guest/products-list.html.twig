{% extends 'base.html.twig' %}

{% block metatitle %}
	Tout les produits
{% endblock metatitle %}

{% block main %}
	<section>
		<h2>Toutes les cat√©gories</h2>
		<div class="catalog-list">
			{% for product in products %}
				{% if product.isPublished %}
					<a href="{{ path('show-product', {'id': product.id}) }}">
						<article class="category {{ product.category.color }}">
							<h3>{{ product.title }}</h3>
						</article>
					</a>
				{% endif %}
			{% endfor %}
		</div>

	</section>
{% endblock main %}
