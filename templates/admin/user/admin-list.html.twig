{% extends 'admin/base.html.twig' %}

{% block metatitle %}
	Liste des produits
{% endblock metatitle %}

{% block main %}
	<section class="container">
		<h2>Liste des produits</h2>

		{% if users is not empty %}
			<table>
				<thead>
					<tr>
						<th>Utilisateur</th>
						<th>Rôle</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.email }}</td>
							<td>
								{% for role in user.roles %}
									{{ role }}{% if not loop.last %}, {% endif %}
								{% endfor %}
							</td>

						</tr>
					</tbody>
				</tbody>
			{% endfor %}
		</table>
	{% else %}
		<p>Aucun admin enregistré pour le moment.</p>
	{% endif %}
</section>{% endblock main %}
