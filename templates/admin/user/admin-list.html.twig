{% extends 'admin/base.html.twig' %}

{% block metatitle %}
	Liste des produits
{% endblock metatitle %}

{% block main %}

	{% for message in app.flashes('admin_created') %}
		<div class="success-message">
			{{ message }}
		</div>
	{% endfor %}

	<section class="container">
		<h2>Liste des produits</h2>

		{% if users is not empty %}
			<table>
				<thead>
					<tr>
						<th>Utilisateur</th>
						<th>Rôle</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.email }}</td>
							<td>
								{% for role in user.roles %}
									{# Si ce n'est PAS le dernier rôle, on ajoute une virgule #}
									{{ role }}
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							</td>

						</tr>
					</tbody>
				</tbody>
			{% endfor %}
		</table>
	{% else %}
		<p>Aucun admin enregistré pour le moment.</p>
	{% endif %}
</section>{% endblock main %}
