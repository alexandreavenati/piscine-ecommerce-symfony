{% extends 'admin/base.html.twig' %}

{% block metatitle %}
	Liste des produits
{% endblock metatitle %}


{% block flashMessage %}
	{% for message in app.flashes('product_created') %}
		<div class="success-message">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('product_deleted') %}
		<div class="success-message">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error_product_updated') %}
		<div class="error-message">
			{{ message }}
		</div>
	{% endfor %}
{% endblock flashMessage %}

{% block main %}

	<section class="container">
		<h2>Liste des produits</h2>

		{% if products is not empty %}
			<table>
				<thead>
					<tr>
						<th>ID</th>
						<th>Titre</th>
						<th>Cat√©gorie</th>
						<th>Prix (‚Ç¨)</th>
						<th>Cr√©√© le</th>
						<th>Modifi√© le</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for product in products %}
						<tr>
							<td>{{ product.id }}</td>
							<td>{{ product.title }}</td>
							<td>{{ product.category.title }}</td>
							<td>{{ product.price }}</td>
							<td>{{ product.createdAt | date('d/m/Y H:i') }}</td>
							<td>
								{% if product.updatedAt is not null %}
									{{ product.updatedAt | date('d/m/Y H:i') }}
								{% else %}
									Jamais modifi√©
								{% endif %}
							</td>
							<td>
								<a href="{{ path('admin-update-product', {'id': product.id}) }}" class="btn btn-edit">‚úèÔ∏è Modifier</a>
								<a href="{{ path('admin-delete-product', {'id': product.id}) }}" class="btn btn-delete">üóëÔ∏è Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>Aucun produit enregistr√© pour le moment.</p>
		{% endif %}
	</section>
{% endblock main %}
